<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>

<div class="container">
  <%- include('../layout/header', {title: "Login", user: user}) %>
  <h1>Log in</h1>
  <div class="message">
    <%= message %>
  </div>

  <form class="form-horizontal" role="form" style="width: 50%" action="/login" method="POST">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username</label>
      <div class="col-sm-10">
          <input type="text" class="form-control" id="username" name="username" placeholder="Your username" value="">
      </div>
    </div>

    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password" placeholder="Your password" value="">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
          <input id="login" name="login" type="submit" value="Log In" class="btn btn-primary">
      </div>
    </div>
  </form>

  <div id="return">
    <a class="btn btn-large btn-info" href="/page">Return to the homepage</a>
  </div>
</div>
