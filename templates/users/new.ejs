<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>

<div class="container">
  <%- include('../layout/header', {title: "Sign Up", user: user}) %>
  <h1>Fill out the form below to sign up</h1>
  <form class="form-horizontal" role="form" style="width: 50%" action="/users/new" method="POST">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username</label>
      <div class="col-sm-10">
          <input type="text" class="form-control" id="username" name="username" placeholder="The name you pick to log in" value="">
      </div>
    </div>

    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password of this account" value="">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
          <input id="submit" name="submit" type="submit" value="Create an account" class="btn btn-primary">
      </div>
    </div>

    <div id="return">
      <a class="btn btn-large btn-info" href="/">Return to the homepage</a>
    </div>
  </form>
</div>
